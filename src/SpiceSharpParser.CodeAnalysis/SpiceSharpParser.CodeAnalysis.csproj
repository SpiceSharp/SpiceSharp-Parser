<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.5</TargetFramework>
    <CodeAnalysisRuleSet>stylecop.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\SpiceSharpParser\**\*.cs">
      <Link>%(FileName)</Link>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="..\SpiceSharpParser\obj\**\*.*" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="..\SpiceSharpParser\ModelReaders\Netlist\Spice\ISpiceObjectReader.cs" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="stylecop.json" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SpiceSharp" Version="2.4.0" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.1.0-beta009">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SpiceSharpParser\SpiceSharpParser.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="SpiceSharp">
      <HintPath>..\..\..\SpiceSharp\SpiceSharp\bin\Debug\netstandard1.5\SpiceSharp.dll</HintPath>
    </Reference>
  </ItemGroup>
</Project>
